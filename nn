
var num = 8888888;
function sumOfDigits(num){
  var sum = 0;
  var str = num.toString();
  for (var i = 0; i<str.length;i++){
    sum += parseInt(str.charAt(i));
  }                                
    if (sum <10) {
      return sum; 
    else {
      num = sum; 
      return sumOfDigits(num); 
    }                          
}

console.log(sumOfDigits(num));
